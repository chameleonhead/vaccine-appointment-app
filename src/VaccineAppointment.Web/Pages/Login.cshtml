@page
@model VaccineAppointment.Web.Pages.LoginModel
@{
    ViewData["Title"] = "ログイン";
}

@if (!string.IsNullOrEmpty(Model.ErrorMessage))
{
    <div class="alert alert-danger">
        @Model.ErrorMessage
    </div>
}
<h1>ログイン</h1>
<form method="post">
    <div class="form-group">
        <label>ユーザー名</label>
        <input type="text" class="form-control" asp-for="Username" autocomplete="username" />
    </div>
    <div class="form-group">
        <label>パスワード</label>
        <input type="password" class="form-control" asp-for="Password" autocomplete="current-password" />
    </div>
    <div class="form-group">
        <button class="btn btn-primary btn-block">ログイン</button>
    </div>
</form>