@page
@model VaccineAppointment.Web.Pages.Admin.Appointments.IndexModel
@{
    ViewData["Title"] = "予約管理";
    var month = Model.Month;
    var prevMonth = Model.PrevMonth;
    var nextMonth = Model.NextMonth;

    var selectedDate = Model.SelectedDate;
    var prevDate = selectedDate.PlusDays(-1);
    var nextDate = selectedDate.PlusDays(1);

    var slots = Model.Appointments!.AvailableSlots;
}

<h1>予約管理</h1>

<div class="row">
    <div class="col-lg-4">
        <a asp-route-year="@prevMonth.Year" asp-route-month="@prevMonth.Month" asp-route-day="@prevMonth.OnDayOfMonth(1).Day">前の月</a>
        <a asp-route-year="@nextMonth.Year" asp-route-month="@nextMonth.Month" asp-route-day="@nextMonth.OnDayOfMonth(1).Day">次の月</a>
        <h2>@Model.Month.Year 年 @Model.Month.Month 月</h2>
        <partial name="_Calendar" model="@(new CalendarViewModel() { Month = month, SelectedDate = Model.SelectedDate, LinkPage="Index" })" />
    </div>
    <div class="col-lg-8">
        <a asp-route-year="@prevDate.Year" asp-route-month="@prevDate.Month" asp-route-day="@prevDate.Day">前の日</a>
        <a asp-route-year="@nextDate.Year" asp-route-month="@nextDate.Month" asp-route-day="@nextDate.Day">次の日</a>
        <h2>@Model.SelectedDate.Day 日 (@Model.SelectedDate.DayOfWeek)</h2>
        @if (slots.Any())
        {
            <div class="list-group">
                @foreach (var slot in slots)
                {
                    <div class="list-group-item">
                        <div class="d-flex w-100 justify-content-between">
                            <h5 class="mb-1">@slot.From.TimeOfDay - @slot.To.TimeOfDay</h5>
                            <small>(@slot.CountOfSlot 人)</small>
                        </div>
                        @if (slot.Appointments.Any())
                        {
                            @foreach (var appointment in slot.Appointments)
                            {
                                <p>@appointment.Name</p>
                            }
                        }
                        else
                        {
                            <p>予約はありません。</p>
                        }
                        <div><a asp-page="Edit" asp-route-year="@selectedDate.Year" asp-route-month="@selectedDate.Month" asp-route-day="@selectedDate.Day" asp-route-id="@slot.Id">編集</a></div>
                    </div>
                }
            </div>
        }
        else
        {
            <p>予約枠がありません。</p>
        }
    </div>
</div>


