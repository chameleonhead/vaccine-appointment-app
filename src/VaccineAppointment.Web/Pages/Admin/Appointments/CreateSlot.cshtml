@page
@model VaccineAppointment.Web.Pages.Admin.Appointments.CreateSlotModel
@{
    ViewData["Title"] = "予約管理";
    var month = Model.Month;
    var prevMonth = Model.PrevMonth;
    var nextMonth = Model.NextMonth;

    var selectedDate = Model.SelectedDate;
    var prevDate = selectedDate.PlusDays(-1);
    var nextDate = selectedDate.PlusDays(1);
}

<h1>予約管理</h1>

<div class="row">
    <div class="col-lg-4">
        <div>
            <a class="btn btn-link pl-0" asp-page="CreateSlot" asp-route-year="@prevMonth.Year" asp-route-month="@prevMonth.Month" asp-route-day="@prevMonth.OnDayOfMonth(1).Day">前の月</a>
            <a class="btn btn-link pl-0" asp-page="CreateSlot" asp-route-year="@nextMonth.Year" asp-route-month="@nextMonth.Month" asp-route-day="@nextMonth.OnDayOfMonth(1).Day">次の月</a>
        </div>
        <h2>@Model.Month.Year 年 @Model.Month.Month 月</h2>
        <partial name="_Calendar" model="@(new CalendarViewModel() { Month = month, SelectedDate = Model.SelectedDate, LinkPage="CreateSlot" })" />
    </div>
    <div class="col-lg-8">
        <div class="d-flex justify-content-between">
            <div>
                <a class="btn btn-link pl-0" asp-page="CreateSlot" asp-route-year="@prevDate.Year" asp-route-month="@prevDate.Month" asp-route-day="@prevDate.Day">前の日</a>
                <a class="btn btn-link pl-0" asp-page="CreateSlot" asp-route-year="@nextDate.Year" asp-route-month="@nextDate.Month" asp-route-day="@nextDate.Day">次の日</a>
            </div>
            <div>
                <a class="btn btn-sm btn-outline-secondary" asp-page="Index" asp-route-year="@selectedDate.Year" asp-route-month="@selectedDate.Month" asp-route-day="@selectedDate.Day">戻る</a>
            </div>
        </div>
        <div class="d-flex justify-content-between">
            <h2>@Model.SelectedDate.Day 日 (@Model.SelectedDate.DayOfWeek)</h2>
        </div>
        <h3>新規予約枠の作成</h3>
        <form method="post">
            <div class="form-group">
                <label>開始時刻</label>
                <input class="form-control" type="time" asp-for="StartTime" />
            </div>
            <div class="form-group">
                <label>予約枠の長さ (分)</label>
                <input class="form-control" type="number" asp-for="DurationMinutes" />
            </div>
            <div class="form-group">
                <label>受入可能件数</label>
                <input class="form-control" type="number" asp-for="CountOfSlot" />
            </div>
            <div class="form-group">
                <button class="btn btn-primary mr-2">登録</button>
                <a class="btn btn-link" asp-page="CreateMultipleSlots" asp-route-year="@selectedDate.Year" asp-route-month="@selectedDate.Month" asp-route-day="@selectedDate.Day">予約枠を一括作成</a>
            </div>
        </form>
    </div>
</div>


