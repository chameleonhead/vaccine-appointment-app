@page
@model VaccineAppointment.Web.Pages.Admin.Appointments.SlotDetailsModel
@{
    ViewData["Title"] = "予約管理";
    var month = Model.Month;
    var prevMonth = Model.PrevMonth;
    var nextMonth = Model.NextMonth;

    var selectedDate = Model.SelectedDate;
    var prevDate = selectedDate.PlusDays(-1);
    var nextDate = selectedDate.PlusDays(1);

    var slot = Model.Slot!;
}

<h1>予約管理</h1>

<div class="row">
    <div class="col-lg-4">
        <div>
            <a class="btn btn-link pl-0" asp-page="Index" asp-route-year="@prevMonth.Year" asp-route-month="@prevMonth.Month" asp-route-day="@prevMonth.OnDayOfMonth(1).Day">前の月</a>
            <a class="btn btn-link pl-0" asp-page="Index" asp-route-year="@nextMonth.Year" asp-route-month="@nextMonth.Month" asp-route-day="@nextMonth.OnDayOfMonth(1).Day">次の月</a>
        </div>
        <h2>@Model.Month.Year 年 @Model.Month.Month 月</h2>
        <partial name="_Calendar" model="@(new CalendarViewModel() { Month = month, SelectedDate = Model.SelectedDate, LinkPage="Index" })" />
    </div>
    <div class="col-lg-8">
        <div class="d-flex justify-content-between">
            <div>
                <a class="btn btn-link pl-0 disabled" asp-page="Index" asp-route-year="@prevDate.Year" asp-route-month="@prevDate.Month" asp-route-day="@prevDate.Day">前の日</a>
                <a class="btn btn-link pl-0 disabled" asp-page="Index" asp-route-year="@nextDate.Year" asp-route-month="@nextDate.Month" asp-route-day="@nextDate.Day">次の日</a>
            </div>
            <div>
                <a class="btn btn-sm btn-outline-secondary" asp-page="Index" asp-route-year="@selectedDate.Year" asp-route-month="@selectedDate.Month" asp-route-day="@selectedDate.Day">戻る</a>
            </div>
        </div>
        <h2>@Model.SelectedDate.Day 日 (@Model.SelectedDate.DayOfWeek)</h2>
        <div class="d-flex justify-content-between">
            <h3 class="mb-1">予約枠 @slot.From.TimeOfDay - @slot.To.TimeOfDay</h3>
            <div class="d-flex align-items-center">
                <a class="btn btn-sm btn-outline-secondary @(slot.CanCreateAppointment ? "" : "disabled") mr-2" asp-page="CreateAppointment" asp-route-year="@selectedDate.Year" asp-route-month="@selectedDate.Month" asp-route-day="@selectedDate.Day" asp-route-id="@slot.Id">予約登録</a>
                <a class="btn btn-sm btn-outline-danger @(slot.CanDelete ? "" : "disabled") mr-2" asp-page="DeleteSlot" asp-route-year="@selectedDate.Year" asp-route-month="@selectedDate.Month" asp-route-day="@selectedDate.Day" asp-route-id="@slot.Id">削除</a>
                <a class="btn btn-sm btn-outline-primary @(slot.CanUpdate ? "" : "disabled")" asp-page="EditSlot" asp-route-year="@selectedDate.Year" asp-route-month="@selectedDate.Month" asp-route-day="@selectedDate.Day" asp-route-id="@slot.Id">編集</a>
            </div>
        </div>
        <h5 class="font-weight-bold">詳細</h5>
        <div class="list-group">
            <div class="list-group-item">
                <div class="row">
                    <div class="col-4 text-right"><b>受入可能件数</b></div>
                    <div class="col-8">@slot.CountOfSlot</div>
                </div>
            </div>
        </div>

        <h5 class="font-weight-bold">予約状況</h5>
        @if (slot.Appointments.Any())
        {
            <div class="list-group">
                @foreach (var appointment in slot.Appointments)
                {
                    <a class="list-group-item list-group-item-action" asp-page="AppointmentDetails" asp-route-year="@selectedDate.Year" asp-route-month="@selectedDate.Month" asp-route-day="@selectedDate.Day" asp-route-slotId="@slot.Id" asp-route-id="@appointment.Id">
                        <div class="d-flex w-100 justify-content-between">
                            <h5 class="mb-1">@appointment.Name</h5>
                        </div>
                        <div class="row">
                            <div class="col-4">メールアドレス</div>
                            <div class="col-8">@appointment.Email</div>
                        </div>
                        <div class="row">
                            <div class="col-4">年齢</div>
                            <div class="col-8">@appointment.Age</div>
                        </div>
                        <div class="row">
                            <div class="col-4">性別</div>
                            <div class="col-8">@appointment.Sex</div>
                        </div>
                    </a>
                }
            </div>
        }
        else
        {
            <p>予約がありません。</p>
        }
    </div>
</div>


