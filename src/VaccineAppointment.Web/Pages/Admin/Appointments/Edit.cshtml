@page
@model VaccineAppointment.Web.Pages.Admin.Appointments.EditModel
@{
    ViewData["Title"] = "予約管理";
    var month = Model.Month;
    var prevMonth = Model.PrevMonth;
    var nextMonth = Model.NextMonth;

    var selectedDate = Model.SelectedDate;
    var prevDate = selectedDate.PlusDays(-1);
    var nextDate = selectedDate.PlusDays(1);

    var slot = Model.Slot!;
}

<h1>予約管理</h1>

<div class="row">
    <div class="col-lg-4">
        <a asp-page="Index" asp-route-year="@prevMonth.Year" asp-route-month="@prevMonth.Month" asp-route-day="@prevMonth.OnDayOfMonth(1).Day">前の月</a>
        <a asp-page="Index" asp-route-year="@nextMonth.Year" asp-route-month="@nextMonth.Month" asp-route-day="@nextMonth.OnDayOfMonth(1).Day">次の月</a>
        <h2>@Model.Month.Year 年 @Model.Month.Month 月</h2>
        <partial name="_Calendar" model="@(new CalendarViewModel() { Month = month, SelectedDate = Model.SelectedDate, LinkPage="Index" })" />
    </div>
    <div class="col-lg-8">
        <a asp-page="Index" asp-route-year="@selectedDate.Year" asp-route-month="@selectedDate.Month" asp-route-day="@selectedDate.Day">戻る</a>
        <h2>@Model.SelectedDate.Day 日 (@Model.SelectedDate.DayOfWeek)</h2>
        <h5 class="mb-1">@slot.From.TimeOfDay - @slot.To.TimeOfDay</h5>
        @if (slot.Appointments.Any())
        {
            <div class="list-group">
                @foreach (var appointment in slot.Appointments)
                {
                    <div class="list-group-item">
                        <div class="d-flex w-100 justify-content-between">
                            <h5 class="mb-1">@appointment.Name</h5>
                        </div>
                        <div class="row">
                            <div class="col-4">メールアドレス</div>
                            <div class="col-8"><a href="mailto:@appointment.Email">@appointment.Email</a></div>
                        </div>
                        <div class="row">
                            <div class="col-4">年齢</div>
                            <div class="col-8">@appointment.Age</div>
                        </div>
                        <div class="row">
                            <div class="col-4">性別</div>
                            <div class="col-8">@appointment.Sex</div>
                        </div>
                        <div><a asp-page="Edit" asp-route-id="@slot.Id">編集</a></div>
                    </div>
                }
            </div>
        }
        else
        {
            <p>予約枠がありません。</p>
        }
    </div>
</div>


