@page
@model IndexModel

@{
    ViewData["Title"] = "ユーザー管理";
}

<h1>ユーザー管理</h1>

<hr />
<div class="my-2 row justify-content-between">
    <div class="col-auto">
        <a class="btn btn-outline-secondary" asp-page="Create">新規登録</a>
    </div>
</div>
<div class="list-group">
    @foreach (var user in Model.Users)
    {
        <a asp-page="./Details" asp-route-id="@user.Id" class="list-group-item list-group-item-action">
            <h5>@user.Name</h5>
            <p class="mb-0"><b>ユーザー名</b> @user.Username</p>
            <p class="mb-0"><b>役割</b> @user.Role</p>
        </a>
    }
</div>
