@page
@model CreateModel

@{
    ViewData["Title"] = "ユーザー管理";
}

<h1>ユーザー管理</h1>

<hr />
<div class="my-2 row justify-content-between">
    <div class="col-auto">
        <a class="btn btn-outline-secondary" asp-page="./Index">戻る</a>
    </div>
</div>
<h5><b>新規登録</b></h5>
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label">表示名</label>
                <input type="text" asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Username" class="control-label">ユーザー名</label>
                <input type="text" asp-for="Username" class="form-control" />
                <span asp-validation-for="Username" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Password" class="control-label">パスワード</label>
                <input type="password" asp-for="Password" class="form-control" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Role" class="control-label">ロール</label>
                <select asp-for="Role" class="form-control">
                    <option value="User">User</option>
                    <option value="Administrator">Administrator</option>
                </select>
                <span asp-validation-for="Role" class="text-danger"></span>
            </div>
            <div class="form-group">
                <button type="submit" class="btn btn-primary">登録</button>
            </div>
        </form>
    </div>
</div>
