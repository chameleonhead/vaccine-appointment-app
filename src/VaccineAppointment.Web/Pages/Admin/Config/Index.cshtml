@page
@model IndexModel

@{
    ViewData["Title"] = "設定";
}

<h1>設定</h1>

<form method="post">
    <div class="card my-3">
        <div class="card-body p-3">
            <h4 class="card-title m-0">予約可能日</h4>
        </div>
        <ul class="list-group list-group-flush">
            <li class="list-group-item">
                <div class="row align-items-center">
                    <div class="col-3"><b>開始日</b></div>
                    <div class="col-9">
                        <input class="form-control" type="date" asp-for="AvailableIntervalStart" />
                    </div>
                </div>
            </li>
            <li class="list-group-item">
                <div class="row align-items-center">
                    <div class="col-3"><b>終了日</b></div>
                    <div class="col-9">
                        <input class="form-control" type="date" asp-for="AvailableIntervalEnd" />
                    </div>
                </div>
            </li>
        </ul>
        <div class="card-footer bg-white">
            <button class="btn btn-primary" asp-page-handler="AppointmentConfig">保存</button>
        </div>
    </div>

    <div class="card my-3">
        <div class="card-body p-3">
            <h4 class="card-title m-0">メール設定</h4>
        </div>
        <ul class="list-group list-group-flush">
            <li class="list-group-item">
                <div class="row align-items-center">
                    <div class="col-3"><b>ホスト</b></div>
                    <div class="col-9">
                        <input class="form-control" asp-for="Host" />
                    </div>
                </div>
            </li>
            <li class="list-group-item">
                <div class="row align-items-center">
                    <div class="col-3"><b>ポート</b></div>
                    <div class="col-9">
                        <input class="form-control" asp-for="Port" />
                    </div>
                </div>
            </li>
            <li class="list-group-item">
                <div class="row align-items-center">
                    <div class="col-3"><b>SSL</b></div>
                    <div class="col-9">
                        <label>
                            @Html.CheckBoxFor(model => model.UseSsl, new { @class = "form-check-inline" })
                            SSL を使用する
                        </label>
                    </div>
                </div>
            </li>
            <li class="list-group-item">
                <div class="row align-items-center">
                    <div class="col-3"><b>ユーザー名</b></div>
                    <div class="col-9">
                        <input class="form-control" asp-for="Username" autocomplete="off" />
                    </div>
                </div>
            </li>
            <li class="list-group-item">
                <div class="row align-items-center">
                    <div class="col-3"><b>パスワード</b></div>
                    <div class="col-9">
                        <input class="form-control" type="password" asp-for="Password" value="@Model.Password" autocomplete="off" />
                    </div>
                </div>
            </li>
            <li class="list-group-item">
                <div class="row align-items-center">
                    <div class="col-3"><b>テスト送信先</b></div>
                    <div class="col-9">
                        <input class="form-control" asp-for="ToAddress" />
                    </div>
                </div>
            </li>
        </ul>
        <div class="card-footer bg-white">
            <div class="row no-gutters">
                <div class="col-auto mr-2">
                    <button class="btn btn-primary" asp-page-handler="EmailConfig">保存</button>
                </div>
                <div class="ml-auto col-auto">
                    <button class="btn btn-outline-secondary" asp-page-handler="TestSendingEmail">メール送信テスト</button>
                </div>
            </div>
        </div>
    </div>
    <div class="card my-3">
        <div class="card-body p-3">
            <h4 class="card-title m-0">予約時のメールテンプレート</h4>
        </div>
        <ul class="list-group list-group-flush">
            <li class="list-group-item">
                <div class="row align-items-center">
                    <div class="col-3"><b>差出人</b></div>
                    <div class="col-9">
                        <input class="form-control" asp-for="AppointmentAcceptedMessageFromTemplate" />
                    </div>
                </div>
            </li>
            <li class="list-group-item">
                <div class="row align-items-center">
                    <div class="col-3"><b>件名</b></div>
                    <div class="col-9">
                        <input class="form-control" asp-for="AppointmentAcceptedMessageSubjectTemplate" />
                    </div>
                </div>
            </li>
            <li class="list-group-item">
                <div class="row align-items-center">
                    <div class="col-3"><b>本文テンプレート</b></div>
                    <div class="col-9">
                        <textarea class="form-control" rows="10" asp-for="AppointmentAcceptedMessageBodyTemplate"></textarea>
                    </div>
                </div>
            </li>
        </ul>
        <div class="card-footer bg-white">
            <div class="row no-gutters">
                <div class="col-auto mr-2">
                    <button class="btn btn-primary" asp-page-handler="AppointmentAcceptedMessageEmailTemplate">保存</button>
                </div>
            </div>
        </div>
    </div>
</form>